<Window x:Class="Wpf_pierwszy.widok.GridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_pierwszy.widok"
        mc:Ignorable="d"
        Title="GridWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>


        </Grid.RowDefinitions>



        <Border Background="#008000" Grid.Column="
                1" Grid.ColumnSpan="2" Panel.ZIndex="4"></Border>
        <Border Background="#6495ed" Grid.Column="0" Grid.RowSpan="2" Panel.ZIndex="3"></Border>

        <Border Background="#ff0000" Grid.Column="2" Grid.ColumnSpan="2" Panel.ZIndex="4" ></Border>
        <Border Background="#ffff00" Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="1"></Border>



    </Grid>

</Window>
